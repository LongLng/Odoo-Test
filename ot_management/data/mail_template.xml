<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="ot_to_pm_template" model="mail.template">
            <field name="name">Send request to PM</field>
            <field name="model_id" ref="ot_management.model_ot_registration"/>
            <field name="email_from">${object.employee_id.email.formatted | safe}</field>
            <field name="email_to">${object.manager_id.email}</field>
            <field name="subject">${object.company_id.name}</field>
            <field name="body_html" type="html">
                <div style="margin:0px;padding: 0px;">
                    <p style="margin: 0px;padding: 0px;font-size: 13px;">
                        Dear ${object.manager_id.name}
                        <br/>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>